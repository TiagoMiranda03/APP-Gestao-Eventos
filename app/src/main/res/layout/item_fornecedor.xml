<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="12dp"
    android:background="#ffeeff"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#ffeeff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_user"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/txtNomeFornecedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Fornecedor"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtCategoriaFornecedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria: Catering"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txtContactoFornecedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacto"
                android:textSize="13sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/txtLocalizacaoFornecedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localização: Porto"
                android:textSize="13sp"
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/txtPrecoFornecedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preço médio: €150"
                android:textSize="13sp"
                android:textColor="#000000"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBoxSelecionado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
